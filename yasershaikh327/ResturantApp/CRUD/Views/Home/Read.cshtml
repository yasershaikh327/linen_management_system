@{
}

@model List<CRUD.Models.Student>;

<table class="table table-light">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col" colspan="2">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.DateAdded.ToString()</td>
                <td><a type="button" asp-action="Update" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-outline-warning">Edit</a></td>
                <td><a type="button" asp-action="DeleteData" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a></td>
            </tr>
        }  
       
    </tbody>
</table>

@if (TempData["Message"] != null)
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Message"]
        </div>
    }